{
  "compilerOptions": {
    "target": "es6", // Ustala wersję ECMAScript
    "module": "esnext", // Typ modułu
    "lib": ["dom", "dom.iterable", "esnext"], // Biblioteki do użycia
    "allowJs": true, // Zezwala na JavaScript
    "skipLibCheck": true, // Pomija sprawdzanie typów w plikach dtypów
    "strict": true, // Włącza ścisłe sprawdzanie typów
    "forceConsistentCasingInFileNames": true, // Wymusza spójną wielkość liter w nazwach plików
    "noEmit": true, // Nie generuje plików wyjściowych
    "esModuleInterop": true, // Umożliwia importy ES
    "moduleResolution": "node", // Typ rozwiązywania modułów
    "resolveJsonModule": true, // Umożliwia importy plików JSON
    "isolatedModules": true, // Umożliwia użycie pojedynczych modułów
    "jsx": "react" // Ustala typ
  },
  "include": ["src"], // Dołącz folder źródłowy
  "exclude": ["node_modules", "dist"] // Wyklucz foldery
}
